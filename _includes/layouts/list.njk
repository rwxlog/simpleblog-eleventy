---
layout: base.njk
---

<main class="container main">
  <h1>{{ title }}</h1>

  <section class="post-list">
    {% set posts = collections.posts %}
    {% if category %}
      {% set posts = collections.posts | filterByCategory(category) %}
    {% endif %}

    {% for post in posts %}
    <article class="post-excerpt">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <p class="meta">{{ post.date | date("MMM d, yyyy") }}{% if post.data.reading_time %} · {{ post.data.reading_time }} min read{% endif %}</p>
      {% if post.data.long_summary %}
        <p>{{ post.data.long_summary }}</p>
      {% endif %}
      <a class="read-more" href="{{ post.url }}">Read more →</a>
    </article>
    {% endfor %}
  </section>

</main>
